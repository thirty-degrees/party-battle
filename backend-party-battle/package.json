{
  "name": "backend-party-battle",
  "private": true,
  "version": "2.4.0",
  "main": "build/index.js",
  "engines": {
    "node": ">= 20.9.0"
  },
  "scripts": {
    "start": "tsx watch src/index.ts",
    "loadtest": "tsx loadtest/example.ts --room my_room --numClients 2",
    "build": "npm run clean && tsc",
    "clean": "rimraf build",
    "test": "mocha -r tsx test/**_test.ts --exit --timeout 15000 --reporter spec",
    "test:ci": "mocha -r tsx test/**_test.ts --exit --timeout 15000 --reporter json > test-results.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:ci": "eslint . --ext .ts --format junit --output-file lint-results.xml",
    "docker:build": "docker build -f ../backend-party-battle/dockerfile -t backend-party-battle .."
  },
  "devDependencies": {
    "@colyseus/loadtest": "^0.16.1",
    "@colyseus/testing": "^0.16.3",
    "@eslint/js": "^9.34.0",
    "@types/express": "^5.0.3",
    "@types/mocha": "^10.0.10",
    "eslint": "^9.34.0",
    "eslint-config-expo": "~9.2.0",
    "eslint-formatter-junit": "^8.40.0",
    "mocha": "^11.7.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "dependencies": {
    "@colyseus/auth": "^0.16.6",
    "@colyseus/core": "^0.16.19",
    "@colyseus/monitor": "^0.16.7",
    "@colyseus/playground": "^0.16.4",
    "@colyseus/tools": "^0.16.13",
    "@colyseus/ws-transport": "^0.16.5",
    "colyseus": "^0.16.4",
    "express": "^5.1.0"
  }
}
